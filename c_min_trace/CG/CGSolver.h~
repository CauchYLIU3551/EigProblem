#ifndef _CGSolver_h_
#define _CGSolver_h_

#include <iostream>
#include <fstream>
#include <vector>
#include <cmath>
#include <stdio.h>

#include <lac/sparsity_pattern.h>
#include <lac/sparse_matrix.h>

class CGSolver
{
 public:
  typedef dealii::SparseMatrix<double> Matrix;
  CGSolver();
  CGSolver(const Matrix&,
	   const Matrix&,
  	   double tol = 1.0e-12);
  virtual ~CGSolver();

  void reinit(const Matrix& , const Matrix&);
  void clear();
 private:
  double toler;
  bool is_initialized;
};


#endif 
